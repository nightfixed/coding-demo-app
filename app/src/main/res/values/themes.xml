<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.SoccerFan" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/brand_interaction</item>
    <item name="colorPrimaryVariant">@color/dark_blue_4</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorAccent">@color/neutral</item>
    <item name="colorOnSecondary">@color/neutral</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
  </style>

  <style name="Theme.SoccerFan.UCL" parent="Theme.SoccerFan">
    <item name="colorPrimary">@color/brand_interaction</item>
    <item name="colorSecondary">@color/dark_blue_4</item>
    <item name="view_background_dark">@color/dark_blue_4</item>
    <item name="view_background_light">@color/dark_blue_2</item>
    <item name="list_item_background">@color/dark_blue_3</item>
    <item name="colorPrimaryVariant">@color/dark_blue_4</item>
  </style>

  <style name="Theme.SoccerFan.UEL" parent="Theme.SoccerFan">
    <item name="colorPrimary">@color/brand_interaction2</item>
    <item name="view_background_dark">@color/full_black</item>
    <item name="view_background_light">@color/grey_bg_1</item>
    <item name="list_item_background">@color/grey_bg_2</item>
    <item name="colorPrimaryVariant">@color/full_black</item>
    <item name="colorSecondary">@color/full_black</item>
  </style>
</resources>