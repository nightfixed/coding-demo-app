<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/iv_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_medium"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:src="@drawable/ic_left_arrow"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/iv_badge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/size_medium"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:src="@drawable/ic_badge_small"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/iv_club_bdge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_medium"
    android:layout_marginRight="@dimen/size_medium"
    android:src="@drawable/club_badge"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent" />

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/tv_team_label"
    style="@style/TextAppearance.Material3.DisplayMedium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_medium"
    android:layout_marginTop="@dimen/size_large"
    android:textColor="@color/white"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/iv_back"
    tools:text="Barcelona"/>

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/tv_team_status"
    style="@style/TextAppearance.Material3.LabelLarge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_medium"
    android:textColor="@color/white_t_70"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toTopOf="@id/tv_team_rounds"
    tools:text="Playing"/>

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/tv_team_rounds"
    style="@style/TextAppearance.Material3.TitleMedium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_medium"
    android:textColor="@color/white"
    android:layout_marginBottom="@dimen/size_large"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:text="Round 1 of 16"/>

</androidx.constraintlayout.widget.ConstraintLayout>